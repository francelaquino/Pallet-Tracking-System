@{
    Layout = "~/Areas/en/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row" ng-controller="trackingController" ng-init="getPalletCount();">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Tracking <small> Pallet Locations </small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Area
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select class="form-control col-md-7 col-xs-12" ng-model="search.AREA">
                                <option value="">--Select--</option>
                                <option ng-repeat="area in areas" value="{{area.ID}}">{{ area.AREA }}</option>
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="button" ng-click="getPalletLocation()" class="btn btn-success">Search</button>
                        </div>
                    </div>
                    <div class="ln_solid"></div>

                </form>
                <br />
                <div class="datatable" style="display:none">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Area</th>
                                <th>Location</th>
                                <th>RFID</th>
                                <th>Pallet Type</th>
                                <th>Pallet Style</th>
                                <th>Last Read Date/Time</th>




                            </tr>
                        </thead>


                        <tbody>
                            <tr ng-repeat="pallet in pallets">
                                <td>{{ pallet.AREA }}</td>
                                <td>{{ pallet.LOCATION }}</td>
                                <td>{{ pallet.RFID }}</td>
                                <td>{{ pallet.TYPE }}</td>
                                <td>{{ pallet.STYLE }}</td>
                                <td>{{ pallet.READTIME }}{{ pallet.DAYS }}</td>







                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


